<apex:page>

    <apex:pageBlock title="User Status">
        <apex:pageBlockSection columns="1">
            {!$User.FirstName} {!$User.LastName} {!$User.Username}
        </apex:pageBlockSection>
    </apex:pageBlock>
    <apex:pageBlock title="Dates">
        <apex:pageBlockSection>
            Today's Date: {! TODAY() }
            <p>Next Week Will Be: {! TODAY() + 7 }</p>
        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>